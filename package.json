{
  "name": "quipudocs",
  "version": "0.0.0",
  "description": "Locale and documentation for Quipucords.",
  "author": "Red Hat",
  "license": "GPL-3.0",
  "private": true,
  "main": "dist/gui/index.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/quipucords/quipudocs.git"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "build": "run-s -l build:*",
    "build:docs": "./scripts/build.docs.js",
    "build:locale": "./scripts/build.locale.js",
    "start": "nodemon -e adoc,json,js --watch ./src --watch ./scripts --exec 'run-s build:* test:ea test:scripts'",
    "test": "run-s -l test:*",
    "test:ea": "eslint --ext=json ./src/modules_ea",
    "test:dist": "eslint --ext=json --ext=js ./dist; htmlhint ./dist",
    "test:scripts": "eslint --ext=js ./scripts"
  },
  "devDependencies": {
    "asciidoctor": "^2.0.3",
    "eslint": "^5.16.0",
    "eslint-config-node": "^4.0.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "htmlhint": "^0.11.0",
    "iso-639-1": "^2.0.5",
    "nodemon": "^1.19.0",
    "npm-run-all":"^4.1.5",
    "prettier": "^1.17.1"
  }
}
